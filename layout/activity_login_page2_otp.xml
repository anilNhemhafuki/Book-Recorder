<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".login_page2_otp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:src="@drawable/otp_code"
        tools:ignore="ContentDescription"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/verify_otp"
        android:textColor="#245262"
        android:textSize="35sp"
        android:textStyle="bold"
        android:letterSpacing="0.03"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/please_enter_the_otp_send_to_you"
        android:textColor="@color/colorGrey"
        android:textSize="15sp"
        android:letterSpacing="0.03"/>
    <TextView
        android:id="@+id/textmobilenumbershow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:letterSpacing="0.03"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp">
        <EditText
            android:id="@+id/inputotp1"
            android:layout_width="40dp"
            android:layout_height="46dp"
            android:background="@drawable/forget2"
            android:textColor="#245262"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_margin="2dp"
            android:gravity="center"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:imeOptions="actionNext"
            tools:ignore="LabelFor"/>

        <EditText
            android:id="@+id/inputotp2"
            android:layout_width="40dp"
            android:layout_height="46dp"
            android:background="@drawable/forget2"
            android:textColor="#245262"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_margin="2dp"
            android:gravity="center"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:imeOptions="actionNext"
            tools:ignore="LabelFor"/>
        <EditText
            android:id="@+id/inputotp3"
            android:layout_width="40dp"
            android:layout_height="46dp"
            android:background="@drawable/forget2"
            android:textColor="#245262"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_margin="2dp"
            android:gravity="center"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:imeOptions="actionNext"
            tools:ignore="LabelFor"/>
        <EditText
            android:id="@+id/inputotp4"
            android:layout_width="40dp"
            android:layout_height="46dp"
            android:background="@drawable/forget2"
            android:textColor="#245262"
            android:textStyle="bold"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_margin="2dp"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:imeOptions="actionNext"
            tools:ignore="LabelFor"/>
        <EditText
            android:id="@+id/inputotp5"
            android:layout_width="40dp"
            android:layout_height="46dp"
            android:background="@drawable/forget2"
            android:textColor="#245262"
            android:textStyle="bold"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_margin="2dp"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:imeOptions="actionNext"
            tools:ignore="LabelFor"/>
        <EditText
            android:id="@+id/inputotp6"
            android:layout_width="40dp"
            android:layout_height="46dp"
            android:background="@drawable/forget2"
            android:textColor="#245262"
            android:textStyle="bold"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_margin="2dp"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:imeOptions="actionNext"
            tools:ignore="LabelFor"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/didn_t_get_the_otp"
            android:textColor="@color/colorGrey"
            android:textSize="18sp"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/sendagainotp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send_again"
            android:textColor="#245262"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="15dp"/>

    </LinearLayout>
        
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/verifytotpclick"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/button"
                android:text="@string/confirm"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFF"

                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>